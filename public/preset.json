{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://aimate.me/preset.schema.json",
  "type": "object",
  "properties": {
    "temperature": {
      "type": "number",
      "minimum": 0,
      "maximum": 2
    },
    "presence_penalty": {
      "type": "number",
      "minimum": -2,
      "maximum": 2
    },
    "frequency_penalty": {
      "type": "number",
      "minimum": -2,
      "maximum": 2
    },
    "top_p": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": 0,
      "maximum": 1
    },
    "top_k": {
      "type": "number",
      "minimum": 1
    },
    "min_p": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "top_a": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "repetition_penalty": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": 0,
      "maximum": 2
    },
    "prompts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/prompt"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "prompt": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": ["role", "content"],
          "properties": {
            "role": {
              "$ref": "#/definitions/role"
            },
            "content": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["role", "identifier"],
          "properties": {
            "role": {
              "$ref": "#/definitions/role"
            },
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "role": {
      "type": "string",
      "enum": ["system", "user", "assistant"]
    },
    "identifier": {
      "type": "string",
      "enum": [
        "character_instructions",
        "character_personality",
        "character_scenario",
        "chat_history",
        "dialogue_examples",
        "persona_description"
      ]
    }
  }
}
