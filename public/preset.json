{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.aimate.me/preset.json",
  "type": "object",
  "description": "Preset for MATE.AI",
  "properties": {
    "$schema": {
      "const": "https://docs.aimate.me/preset.json"
    },
    "temperature": {
      "type": "number",
      "minimum": 0,
      "maximum": 2,
      "description": "Sampling temperature"
    },
    "presence_penalty": {
      "type": "number",
      "minimum": -2,
      "maximum": 2,
      "description": "Presence penalty"
    },
    "frequency_penalty": {
      "type": "number",
      "minimum": -2,
      "maximum": 2,
      "description": "Frequency penalty"
    },
    "top_p": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": 0,
      "maximum": 1,
      "description": "Top-p sampling value"
    },
    "top_k": {
      "type": "number",
      "minimum": 1,
      "description": "Top-k sampling value"
    },
    "min_p": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Minimum probability threshold"
    },
    "top_a": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Alternate top sampling parameter"
    },
    "repetition_penalty": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": 0,
      "maximum": 2,
      "description": "Repetition penalty"
    },
    "prompts": {
      "type": "array",
      "minItems": 1,
      "maxItems": 40,
      "items": {
        "$ref": "#/definitions/prompt"
      },
      "description": "Insert or replace into the conversation history passed to the AI",
      "allOf": [
        {
          "contains": {
            "type": "object",
            "required": ["identifier"],
            "properties": {
              "identifier": {
                "const": "chat_history"
              }
            },
            "additionalProperties": false
          }
        }
      ]
    }
  },
  "required": ["prompts", "$schema"],
  "additionalProperties": false,
  "definitions": {
    "prompt": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": ["role", "content"],
          "description": "Insert into the conversation history, the order determines the insertion position",
          "properties": {
            "role": {
              "$ref": "#/definitions/role"
            },
            "content": {
              "type": "string",
              "maxLength": 1000
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["identifier"],
          "description": "Replace the preset in the conversation history, the order determines the insertion position",
          "properties": {
            "identifier": {
              "$ref": "#/definitions/identifier"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "role": {
      "type": "string",
      "enum": ["system", "user", "assistant"]
    },
    "identifier": {
      "type": "string",
      "enum": [
        "character_instructions",
        "character_personality",
        "character_scenario",
        "dialogue_examples",
        "persona_description",
        "chat_history"
      ]
    }
  }
}
