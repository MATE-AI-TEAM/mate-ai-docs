{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "mdx-components.js",
  ],
  "exclude": ["node_modules", "**/*.mjs"]
}
